<%- include('./partials/header.ejs') %>

<%- include('./partials/navbar.ejs', { isAuth, link: "" }) %>

<div class="container">
  <h1 class="single_thread_header page__title">Create New Poll</h1>

  <form action="/polls" method="POST">

    <div class="form_group">
      <label for="forum">Forum</label>
      <select name="forum" id="forum">

        <% forumsYouFollow.forEach((forum) => { %>
          <option value="<%= forum.forum_id %>"><%= forum.title %></option>
        <% }) %>
      
      </select>
    </div>

    <div class="form_group">
      <label for="title">Title</label>
      <input type="text" name="title" id="title" placeholder="Poll title">
    </div>

    <div class="form_group">
      <label for="question">Question</label>
      <textarea name="question" id="question" rows="5" placeholder="Question Content"></textarea>
    </div>

    <div class="form_group">
      <label for="ans1">Answer One</label>
      <input name="ans1" id="ans1" type="text" >
    </div>

    <div class="form_group">
      <label for="ans2">Answer Two</label>
      <input name="ans2" id="ans2" type="text" >
    </div>

    <div class="form_group">
      <label for="ans3">Answer Three</label>
      <input name="ans3" id="ans3" type="text" >
    </div>

    <button class="btn btn-primary">Create</button>
  </form>
</div>

<%- include('./partials/footer.ejs') %>

