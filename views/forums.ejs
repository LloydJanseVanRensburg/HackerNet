<%- include('./partials/header.ejs') %>

<%- include('./partials/navbar.ejs', { isAuth, link: "Forums" }) %>

<div class="container">

  <div class="forums__header">
    <h1 class="page__title">Forums Page</h1>

    <% if(isAdmin)  { %>
      <a href="/forums/new" class="btn btn-secondary">Create Forum</a>
    <% } %>
  </div>

  <h4 class="forum__subtext">Forums you are following (<%= forumYouFollow.length %>)</h4>

  <div class="flex__container">
    <% forumYouFollow.forEach((f) => { %>
      <a href="/forums/<%= f.forum_id %>" class="forum__card">
        <div class="forum__card-img">
          <img src="/<%= f.image_url %>" alt="">
        </div>
        <h4><%= f.title %></h4>
      </a>
    <% }) %>
  </div>

  <h4 class="forum__subtext">All Forums (<%= allForums.length %>)</h4>

  <div class="flex__container">
    <% allForums.forEach((f) => { %>
      <a href="/forums/<%= f.forum_id %>" class="forum__card">
        <div class="forum__card-img">
          <img src="/<%= f.image_url %>" alt="">
        </div>
        <h4><%= f.title %></h4>
      </a>
    <% }) %>
  </div>

</div>

<%- include('./partials/footer.ejs') %>