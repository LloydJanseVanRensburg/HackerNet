<div class="thread__container">
  <div class="thread__header">

    <div class="thread__info">
      <div class="avatar">
        <img src="/<%= data.forum_image %>" alt="forum-logo">
      </div>

      <h4><%= data.forum_title %></h4>
    </div>

    <p class="thread__creator"><%= data.first_name %> <%=  data.last_name  %></p>

  </div>

  <div class="thread__image">
    <img src="/<%= data.thread_image %>" alt="code snippet">
  </div>

  <h4 class="thread__title"><%= data.thread_title %></h4>

  <p class="thread__text"><%= data.body %></p>

  <ul class="thread__controls">
    <li>
      <a href="/threads/<%= data.thread_id %>">View</a>
    </li>
    <li>
      <button>Comment</button>
    </li>
    <li>
      <button>Like</button>
    </li>
  </ul>
</div>